{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Debug All Services",
      "configurations": [
        "Debug Gateway",
        "Debug Auth Service",
        "Debug Cart Service",
        "Debug Product Service",
        "Debug Chat Service",
        "Debug Order Service"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "microservices",
        "order": 1
      }
    },
    {
      "name": "Debug Core Services",
      "configurations": [
        "Debug Gateway",
        "Debug Auth Service",
        "Debug Product Service"
      ],
      "stopAll": true,
      "presentation": {
        "group": "microservices",
        "order": 2
      }
    }
  ],
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Gateway",
      "runtimeExecutable": "nx",
      "runtimeArgs": ["serve", "@my-shop-backend/api-gateway", "--inspect"],
      "console": "integratedTerminal",
      "restart": true,
      "protocol": "inspector",
      "port": 9229,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Auth Service",
      "runtimeExecutable": "nx",
      "runtimeArgs": ["serve", "@my-shop-backend/auth-service", "--inspect"],
      "console": "integratedTerminal",
      "restart": true,
      "protocol": "inspector",
      "port": 9230,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Cart Service",
      "runtimeExecutable": "nx",
      "runtimeArgs": [
        "serve",
        "@my-shop-backend/add-to-cart-service",
        "--inspect"
      ],
      "console": "integratedTerminal",
      "restart": true,
      "protocol": "inspector",
      "port": 9231,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Chat Service",
      "runtimeExecutable": "nx",
      "runtimeArgs": [
        "serve",
        "@my-shop-backend/chatting-service",
        "--inspect"
      ],
      "console": "integratedTerminal",
      "restart": true,
      "protocol": "inspector",
      "port": 9232,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Product Service",
      "runtimeExecutable": "nx",
      "runtimeArgs": ["serve", "@my-shop-backend/product-service", "--inspect"],
      "console": "integratedTerminal",
      "restart": true,
      "protocol": "inspector",
      "port": 9233,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Order Service",
      "runtimeExecutable": "nx",
      "runtimeArgs": ["serve", "@my-shop-backend/order-service", "--inspect"],
      "console": "integratedTerminal",
      "restart": true,
      "protocol": "inspector",
      "port": 9233,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Gateway",
      "port": 9229,
      "restart": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Auth",
      "port": 9230,
      "restart": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
